@model TextBooks.Models.ViewMyBooks

@{
    ViewBag.Title = "View My Books Borrowed";
}

<div style="margin:5px;">
    @Html.ActionLink("Back To My Account", "Index", null, new { @class = "btn btn-default btn-transparent"})
</div>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            Borrower
        </th>
    </tr>

    @foreach (var item in Model.BookDetails)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.ActionLink(item.Borrower, "../Account/PublicProfile", new { username = item.Borrower,
                                                                                  emailsent = "",
                                                                                  returnedBorrower = false,
                                                                                  bookId = item.B_ID
           })
            </td>
        </tr>
    }

</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/css")
    <link href="@Url.Content("~/Content/Home.css")" rel="stylesheet" type="text/css" />
}
