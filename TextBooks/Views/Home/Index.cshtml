@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 class="text-center">Bindr</h1>
    <p class="lead text-center">Bindr helps students borrow & lend text books at QUT.</p>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="row">
            <h2>Borrow</h2>
            <p>
                Borrowing textbooks is easy with Bindr - just search and choose from available books.
            </p>
        </div>
        <div class="row">
            <a href="Books?title=" class="btn btn-primary btn-lg">Search Now &raquo;</a>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="row">
            <h2>Lend</h2>
            <p>
                Caring is sharing. Allow your fellow students to borrow your spare text books. As a bonus, lenders can borrow more books!
            </p>
        </div>
        <div class="row">
            <a href="Account/Register" class="btn btn-primary btn-lg">Sign Up &raquo;</a>
        </div>
</div>