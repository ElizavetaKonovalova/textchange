<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Texchange</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Home.css")
    @Scripts.Render("~/bundles/modernizr")

</head>

@{
    List<string> searchExamples = new List<string>(new string[] {
        "A Brief History of the Universe",
        "Calculus 101",
        "Economics for the New Student",
        "Networks and Their Uses",
        "The Mysteries of Human Anatomy"
    });
    int sizeOfList = searchExamples.Count;
    Random rnd = new Random();
    string example = "eg, " + searchExamples[rnd.Next(sizeOfList)];
}

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Texchange", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <!---->
            @if (User.Identity.Name.Equals("ifb299books"))
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Accounts", "ViewAccounts", "Account")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            }
            else
            {
            <!--Otherwise if the user is not the admin they get other stuff in thier navbar-->
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Submit a book", "Create", "Books")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>
                            @Html.ActionLink("My Account", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            }

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Texchange</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
